
<%= render 'header' %>

<div class="container">

	<h1>
		<%= @sport.name %>: <%= @home_team.name.capitalize %> vs. <%= @away_team %>
	</h1>

	<p>
		Created: <%= time_ago_in_words(@game.created_at) %>
		| <%= link_to 'Edit', edit_game_path(@game) %>
		| <%= link_to 'Delete', game_path(@game), method: :delete, data: { confirm: 'Are you sure?'} %>
	</p>

	<p>Schedule: <%= @game.schedule %></p>
	<p>Location: <%= @game.location %></p>

</div>

<%= render '/nav_secondary' %>
