  </p>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :mascot_name %>
		<%= f.text_field :mascot_name %>
	</p>



  </p>
  <p>
		<%= f.label :mascot_url %>
		<%= f.text_field :mascot_url %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
