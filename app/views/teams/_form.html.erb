<%= form_for @team do |f| %>
	<% if @team.errors.any? %>
		<h2><%= pluralize(@team.errors.count, "error") %> prevented this post from saving.</h2>
		<ul>
			<% @team.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
  <p>
    <%= f.label :sport %>
    <%= f.collection_select(:sport_id, Sport.all, :id, :name, :prompt => 'Select') %>
